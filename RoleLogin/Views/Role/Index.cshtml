@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<button data-toggle="modal" data-target="#myModal" class="btn btn-primary" onclick="ClearScreen();">Create New</button>
<hr>
<table id="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
</table>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Data Role</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Id">Id</label>
                    <input id="roleIdText"  type="text" class="form-control" placeholder="Id" required>
                </div>
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input id="roleNameText" type="text" class="form-control" placeholder="Name" required>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="Save" onclick="Validation();">Save</button>
                <button type="button" class="btn btn-primary" id="Update" onclick="Validation();">Update</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet"/>

@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://kit.fontawesome.com/ced2c3117f.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script>
        $(document).ready(function () {
            debugger;
            $("#table").DataTable({
                "ajax": {
                    "url":"/Role/GetDataRoles",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "Name" },
                    {
                        "render": function (data, type, row, meta) {
                            return "<a onclick=Edit('"+ row.Id +"')>Edit</a>";
                        }
                    },
                    {                       
                        "render": function (data, type, row) {
                            return "<a onclick=Delete('"+ row.Id +"');>Delete</a>";
                        }
                    }   
                ]
            });
        });


        function Delete(Id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.value) {
                    debugger
                    $.ajax({
                        "url": "/Role/Delete/",
                        "dataType": "json",
                        "data": { Id: Id }
                    }).then((hasil) => {
                        debugger
                        if (hasil.data[0] != 0) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Your data has been deleted',
                                text: 'Deleted!',
                                onclose: location.reload()
                            })
                        }
                        else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Your data not deleted',
                                text: 'Failed!'
                            })
                        }
                    })
                }
            })
        }

        function Edit() {
            var role = new Object();
            role.Id = $("#roleIdText").val();
            role.Name = $("#roleNameText").val();
            $.ajax({
                "url": "/Role/Edit",
                "type": "PUT",
                "dataType": "json",
                "data": role
            }).then((result) => {
                if (result.data > 0) {
                    Swal.fire(
                        'Success!',
                        'Your file has been update.',
                        'success'
                    )
                }
                else {
                    Swal.fire(
                        'Failed!',
                        'Your file not updated.',
                        'FAILED'
                    )
                }
            })
        }

        function Save() {
            debugger;
            var role = new Object();
            role.Name = $("#roleNameText").val();
            $.ajax({
                "url": "/Role/Create",
                "type": "POST",
                "datatype": "json",
                "data": { roleVM: role }
            }).then((result) => {
                debugger;
                if (result.data > 0) {
                    Swal.fire(
                        'Success',
                        'Your file has been Saved.',
                        'success'
                    )
                }
                else {
                    Swal.fire(
                        'Failed',
                        'Your file not saved',
                        'failed'
                    )
                }
            })
        }

        function ClearScreen() {
            document.getElementById("roleIdText").disabled = true;
            $("roleNameText").val('');
            $("Update").hide();
        }

        function Validation() {
            if ($("#roleNameText").val() == "" || $("#roleNameText").val == " ") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops..',
                    text: 'Please Fill Name'
                })
            }
            else if ($("#roleIdText").val() == "" || $("#roleIdText").val == " ") {
                Save();
            }
            else {
                debugger
                Edit($("#roleIdText").val());
            }
        }
    </script>
}